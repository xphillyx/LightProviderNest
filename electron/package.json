{
    "name": "LightProvider",
    "version": "1.0.0",
    "main": "main.js",
    "author": "LEE SEGUN <segunleedev@gmail.com>",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build",
        "test": "ng test",
        "lint": "ng lint",
        "e2e": "ng e2e",
        "electron": "electron .",
        "ng-electron-build": "rimraf dist & ng build --base-href ./",
        "build:mac": "electron-builder --mac --x64",
        "build:win": "electron-builder --win --x64"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "~9.1.7",
        "@angular/common": "~9.1.7",
        "@angular/compiler": "~9.1.7",
        "@angular/core": "~9.1.7",
        "@angular/forms": "~9.1.7",
        "@angular/platform-browser": "~9.1.7",
        "@angular/platform-browser-dynamic": "~9.1.7",
        "@angular/router": "~9.1.7",
        "@types/cuint": "^0.2.1",
        "cross-zip": "^4.0.0",
        "cuint": "^0.2.2",
        "file-system": "^1.2.2",
        "node": "^14.4.0",
        "reverse-line-reader": "^0.2.6",
        "rxjs": "~6.6.7",
        "sanitize-filename": "^1.6.3",
        "tmp-promise": "^3.0.2",
        "tslib": "^1.10.0",
        "zone.js": "~0.10.2"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~0.901.6",
        "@angular/cli": "~9.1.6",
        "@angular/compiler-cli": "~9.1.7",
        "@types/jasmine": "~3.5.0",
        "@types/jasminewd2": "~2.0.3",
        "@types/node": "^12.20.7",
        "codelyzer": "^5.1.2",
        "electron": "^9.4.4",
        "electron-builder": "^22.10.5",
        "jasmine-core": "~3.5.0",
        "jasmine-spec-reporter": "~4.2.1",
        "karma": "~5.0.0",
        "karma-chrome-launcher": "~3.1.0",
        "karma-coverage-istanbul-reporter": "~2.1.0",
        "karma-jasmine": "~3.0.1",
        "karma-jasmine-html-reporter": "^1.4.2",
        "protractor": "~5.4.3",
        "ts-node": "~8.3.0",
        "tslint": "~6.1.0",
        "typescript": "~3.8.3"
    },
    "build": {
        "productName": "LightProvider",
        "appId": "SGIOS.lightprovider",
        "asar": false,
        "protocols": {
            "name": "LightProvider",
            "schemes": [
                "LightProvider"
            ]
        },
        "mac": {
            "target": [
                "dmg"
            ],
            "icon": "assets/icons/mac/icon.icns"
        },
        "dmg": {
            "title": "LightProvider",
            "icon": "assets/icons/mac/icon.icns"
        },
        "win": {
            "target": [
                "zip",
                "nsis"
            ],
            "icon": "assets/icons/win/icon.ico"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb",
                "rpm",
                "zip",
                "tar.gz"
            ],
            "icon": "assets/icons/win/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": false,
            "installerLanguages": [
                "ko_KR"
            ],
            "language": "1042"
        },
        "directories": {
            "buildResources": "resources/installer/",
            "output": "build/",
            "app": "."
        },
        "extraResources": [
            {
                "from": "../dist",
                "to": "dist",
                "filter": [
                    "**/*"
                ]
            },
            {
                "from": "../node_modules",
                "to": "dist/node_modules",
                "filter": [
                    "**/*"
                ]
            }
        ]
    }
}
